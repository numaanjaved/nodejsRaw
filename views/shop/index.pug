extends ../layouts/main-layout.pug 

block content
    main.main
        h1.main-heading My Products
        if hasProduct
            each product in prods
                .card
                    .card-header #{product.title}
                    .card-img
                        img(src="/imgs/istockphoto-1331443382-170667a.jpg")
                    .card-description 
                    .card-footer
        else 
            h2 No Products Yet